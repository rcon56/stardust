<article class="post-single">

  <header class="post-title">
    <p>
      <time>{{ post.date }}</time>
      <span>{{ post.author }}</span>
      <span>/{{ post.category }}</span>
    </p>
    <h1>{{ post.title }}</h1>
  </header>
  <section class="post-content">{{{ post.content }}}</section>

  <!-- Post Tags -->
   <footer class="post-tags">
       <a class="round-tag" href="{{ abs-url "category" post.category }}">{{ post.category }}</a>
   {{ #each post.tags as |t| }}
       <a href="{{ abs-url "tag" t }}">{{ t }}</a>
   {{ /each }}
   </footer>

  <!-- Post Nav -->
  {{ #if (gt paginator.num 1) }}
  <nav class="post-nav">
    {{ #if paginator.has_prev }}
    <a class="prev" href="{{ paginator.prev_url }}"><span>←</span><span>{{ paginator.prev_name }}</span></a>
    {{ /if }} 
    {{ #if paginator.has_next  }}
    <a class="next" href="{{ paginator.next_url }}"><span>{{ paginator.next_name }}</span><span>→</span></a>
    {{ /if }}
  </nav>
  {{ /if }}

  <!-- Disqus -->
  
</article>

